
<div class="container">
  <% booking_infos.each do |booking_info|%>
  <%booking= booking_info[:booking]%>
    <div class="card bg-container-color mt-2 rounded rounded-2 ">
      <div class="row" onclick = "location.href = '/restaurants/<%=booking.restaurant.id%>'">
        <div class="col">
          <div class="card-body py-0">
            <div class="queue-title">
              <%= booking.restaurant.name%>
            </div>
          </div>
          <div class="card-body  py-0">
            Est Time:
          </div>
          <div class="card-body  py-0">
            Rating <strong>10/</strong>/10
          </div>
        </div>
        <div class="col justify-content-end">
            <div class="d-flex justify-content-end">
              <div class="queue-position">
              <strong> <%=booking_info[:queue_position]%></strong>
              <p>Queue</p>
              <p>Position</p>
              </div>
            </div>

        </div>
        </div>
        <div class="d-flex justify-content-evenly my-2">
          <%4.times do %>
              <div class="queue-image"> </div>
          <%end%>
        </div>
      </div>

  <%end%>

</div>
